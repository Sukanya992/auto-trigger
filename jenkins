pipeline {
    agent any
    stages {
        stage('Clone Repo') {
            steps {
                git branch: 'main', url: 'https://github.com/Sukanya992/auto-trigger.git'
            }
        }
        stage('Build') {
            steps {
                sh 'echo "Building Application..."'
                sh 'docker build -t myapp .'
            }
        }
        stage('Deploy') {
            steps {
                sh 'echo "Deploying Application..."'
                sh 'docker-compose up -d'
            }
        }
    }
}
